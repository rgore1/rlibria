<p id="notice"><%= notice %></p>

<h1>Listing Books</h1>

<table >
  <thead>
  <tr>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <table  border="1">

    <tr>
      <td><b>Name</b></td>
      <td><b>Category</b></td>
      <td><b>Author </b></td>
    </tr>

    <% @books.each do |book| %>

        <tr>
          <td><%= book.name %> </td>
          <td><%= book.category.name %></td>
          <td><%= book.author.name %></td>
          <td><%= link_to 'Show', book %></td>
          <td><%= link_to 'Edit', edit_book_path(book) %></td>
          <td><%= link_to 'Destroy', book, method: :delete, data: {confirm: 'Are you sure?'} %></td>
        </tr>
    <% end %>

  </table>
  </tbody>
</table>

